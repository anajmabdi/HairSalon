@{
  Layout = "_Layout";
}

@using HairSalon.Models;
<h1>Our stylists here at Eau Claire's Salon</h1>
@if (Model.Count == 0)
{
  <h3>There are no stylists that have been added yet. </h3>
}
<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>

<h3>@Html.ActionLink("Add new stylist", "Create")</h3>
<h3>@Html.ActionLink("Back to Home Page", "Index", "Home")</h3>