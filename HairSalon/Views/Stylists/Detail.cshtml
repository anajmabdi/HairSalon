@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h1>Stylist Details</h1>
<br>
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h4>@Html.DisplayNameFor(model => model.Specialty): @Html.DisplayFor(model => model.Specialty)</h4>

@if (@Model.Clients.Count == 0)
{
  <h3>No clients have been added to this stylist yet</h3>
  <h3>@Html.ActionLink("Add new client", "Create", "Clients")</h3>
}
else
{
  <h3>Clients</h3>
  <ul>
    @foreach (Client client in Model.Clients)
    {
      <li>@Html.ActionLink($"{client.Name}", "Details","Clients", new { id = client.ClientId })</li>
    }
  </ul>
}

<h3>@Html.ActionLink("Back to Stylist List", "Index")</h3>
<h3>@Html.ActionLink("Back to Home Page", "Index", "Home")</h3>
